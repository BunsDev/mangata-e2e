{
  "name": "mangata-e2e-tests",
  "version": "1.0.0",
  "description": "sets asset info for assets bridged from ethereum to mangata",
  "main": "index.ts",
  "author": "Gleb Urvanov",
  "license": "GPLv3",
  "private": true,
  "dependencies": {
    "@polkadot/api": "^2.10.1",
    "@types/bn.js": "^4.11.6",
    "@types/node": "^14.14.10",
    "@types/uuid": "^8.3.0",
    "@types/web3": "^1.2.2",
    "bn.js": "^5.1.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.26.0",
    "typescript": "3",
    "web3": "^1.3.0",
    "xoshiro": "^2.0.3",
    "yarn": "^1.22.10"
  },
  "scripts": {
    "start": "ts-node --project tsconfig.json index.ts",
    "start-prod": "node ./build/index.js",
    "build": "tsc --project tsconfig.json",
    "test": "jest",
    "test-parallel": "rm nonce.db ; rm sudo.lock; jest test/parallel/* --verbose",
    "test-playground-pararell": "rm nonce.db ; rm sudo.lock; jest test/exploratory/parallelTesting/transfer/* --verbose",
    "test-sequential": "rm nonce.db ; rm sudo.lock; jest test/sequential/* --verbose --runInBand",
    "test-sequential-e2e": "rm nonce.db ; rm sudo.lock; jest test/sequential/xyk-pallet.test.ts --verbose --runInBand --ci --reporters=default --reporters=jest-junit",
    "test-ci": "rm nonce.db ; rm sudo.lock; jest test/ci/* --verbose --runInBand",
    "tsc-lint": "tsc -noemit -p tsconfig.json",
    "eslint": "node_modules/.bin/eslint --max-warnings 0 . --ext .ts",
    "xoshiro": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "babel-jest": "^26.6.3",
    "eslint-config-mangata": "https://github.com/mangata-finance/eslint-config-mangata.git",
    "jest": "^26.6.3",
    "jest-junit": "^12.2.0"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "jest": {
    "verbose": true,
    "bail" : true
  }
}
